let playerName = "Fırat"
let playerQuestion = "Sence yazılımcı olabilirmiyim?"

let randomNumber = Int.random(in: 1...9)
  print(randomNumber)

var eightBall:String

switch randomNumber {
  case 1:
  eightBall = ("Evet, kesinlikle.")
  case 2:
  eightBall = ("Şüphesiz evet.")
  case 3:
  eightBall = ("Hiç tereddüt etme.")
  case 4:
  eightBall = ("Kararsızım, bidaha dene.")
  case 5:
  eightBall = ("Sonra tekrar sor.")
  case 6:
  eightBall = ("Şuanlık bişey yapma.")
  case 7:
  eightBall = ("Bence hayır.")
  case 8:
  eightBall = ("Hiç sanmıyorum.")
  case 9:
  eightBall = ("Kesinlikle hayır.")
  default:
  eightBall = "Error"
}
if (playerName == "") {
  print("\(playerQuestion)")
  print("Sihirli 8 Top diyorki: \(eightBall)")
} else {
print("\(playerName) soruyor: \(playerQuestion)")
print("Sihirli 8 Top diyorki: \(eightBall)")
}
